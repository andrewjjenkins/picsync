{
  "version": "2.0.0",
  "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": "go install .\\cmd\\...",
        "problemMatcher": [ "$go" ],
        "group": "build",
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
      },
      {
        "label": "Run",
        "type": "shell",
